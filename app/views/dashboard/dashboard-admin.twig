<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-head">
                <div class="panel-title">Invoice</div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8">
                        <canvas id="invoice-chart" width="1000" height="450"></canvas>
                    </div>
                    <div class="col-md-4">
                        <div class="widget-1 p-0">
                            <div class="content">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h5 class="title">POS/Bill</h5>
                                        <span class="descr">In Last 12 Months</span>
                                    </div>
                                    <div class="col text-right">
                                        <div class="number text-purple">{{ common.info.currency_abbr }}{{ revenue_stats.bill_12|number_format(2, '.', '') }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="content">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h5 class="title">POS/Bill</h5>
                                        <span class="descr">In Last 30 Days</span>
                                    </div>
                                    <div class="col text-right">
                                        <div class="number text-purple">{{ common.info.currency_abbr }}{{ revenue_stats.bill_1|number_format(2, '.', '') }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="content">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h5 class="title">Invoice</h5>
                                        <span class="descr">In Last 12 Months</span>
                                    </div>
                                    <div class="col text-right">
                                        <div class="number text-primary">{{ common.info.currency_abbr }}{{ revenue_stats.income_12|number_format(2, '.', '') }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="content">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h5 class="title">Invoice</h5>
                                        <span class="descr">In Last 30 Days</span>
                                    </div>
                                    <div class="col text-right">
                                        <div class="number text-primary">{{ common.info.currency_abbr }}{{ revenue_stats.income_1|number_format(2, '.', '') }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="row widget-separator-1 align-items-center">
                <div class="col-md-6 col-lg-6 col-xl-4">
                    <div class="widget-1">
                        <div class="content">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h5 class="title">Total Income</h5>
                                    <span class="descr">All Time</span>
                                </div>
                                <div class="col text-right">
                                    <div class="number text-primary">{{ common.info.currency_abbr }}{{ income_stats.amount|number_format(2, '.', '') }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="content">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h5 class="title">Total Tax</h5>
                                    <span class="descr">All Time</span>
                                </div>
                                <div class="col text-right">
                                    <div class="number text-warning">{{ common.info.currency_abbr }}{{ income_stats.tax|number_format(2, '.', '') }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-4">
                    <div class="widget-1">
                        <div class="content">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h5 class="title">Paid</h5>
                                    <span class="descr">All Time</span>
                                </div>
                                <div class="col text-right">
                                    <div class="number text-success">{{ common.info.currency_abbr }}{{ income_stats.paid|number_format(2, '.', '') }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="content">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h5 class="title">Due Amount</h5>
                                    <span class="descr">All Time</span>
                                </div>
                                <div class="col text-right">
                                    <div class="number text-danger">{{ common.info.currency_abbr }}{{ income_stats.due|number_format(2, '.', '') }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-12 col-xl-4">
                    <div class="widget-1">
                        <div class="content">
                            <div class="row align-items-center">
                                <div class="col">
