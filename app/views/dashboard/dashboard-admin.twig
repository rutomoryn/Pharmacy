    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-head">
                <div class="panel-title">Salary</div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <canvas id="salary-chart" width="1000" height="450"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-head">
                <div class="panel-title">Purchase</div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <canvas id="purchase-chart" width="1000" height="450"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-head">
                <div class="panel-title">Transaction</div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <canvas id="transaction-chart" width="1000" height="450"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-head">
                <div class="panel-title">Customer</div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <canvas id="customer-chart" width="1000" height="450"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-head">
        <div class="panel-title">Notices</div>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-middle table-bordered table-striped datatable-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for notice in notices %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td class="text-primary">{{ notice.title }}</td>
                            <td>{{ notice.description }}</td>
                            <td>{{ notice.start_date|date(common.info.date_format) }}</td>
                            <td>{{ notice.end_date|date(common.info.date_format) }}</td>
                            <td>
                                {% if notice.status == 1 %}
                                    <span class="label label-success">Active</span>
                                {% elseif notice.status == 0 %}
                                    <span class="label label-danger">Inactive</span>
                                {% endif %}
                            </td>
                            <td class="table-action">
                                <a class="text-primary edit" href="{{ common.info.url_route }}noticeboard/view&id={{ notice.id }}"><i class="las la-laptop"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% autoescape 'html' %}
    <input type="hidden" class="invoice-chart-data" value="{{ chart_invoice|json_encode() }}">
    <input type="hidden" class="bill-chart-data" value="{{ chart_bill|json_encode() }}">
    <input type="hidden" class="expense-chart-data" value="{{ chart_expense|json_encode() }}">
    <input type="hidden" class="expense-type-chart-data" value="{{ chart_expense_type|json_encode() }}">
    <input type="hidden" class="purchase-chart-data" value="{{ chart_purchase|json_encode() }}">
    <input type="hidden" class="salary-chart-data" value="{{ chart_salary|json_encode() }}">
    <input type="hidden" class="transaction-chart-data" value="{{ chart_transaction|json_encode() }}">
    <input type="hidden" class="customer-chart-data" value="{{ chart_customer|json_encode() }}">
{% endautoescape %}
