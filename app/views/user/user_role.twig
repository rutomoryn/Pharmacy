{{ include('common/header.twig') }}
<div class="page-title">
	<div class="row align-items-center">
		<div class="col-sm-4">
			<h2 class="page-title-text d-inline-block">{{ page_title }}</h2>
			<div class="breadcrumbs d-inline-block">
				<ul>
					<li><a href="{{ common.info.url_route }}">Dashboard</a></li>
					<li>{{ page_title }}</li>
				</ul>
			</div>
		</div>
		<div class="col-sm-8 text-right">
			<div class="dropdown d-inline-block m-2">
				<a class="btn btn-white btn-sm dropdown-toggle" data-toggle="dropdown"><i class="las la-cloud-download-alt text-primary pr-2"></i> Export</a>
				<ul class="dropdown-menu dropdown-menu-right export-button">
					<li><a class="pdf"><i class="las la-file-pdf pr-2"></i>PDF</a></li>
					<li><a class="excel"><i class="las la-file-excel pr-2"></i>Excel</a></li>
					<li><a class="csv"><i class="las la-file-csv pr-2"></i>CSV</a></li>
					<li><a class="print"><i class="las la-print pr-2"></i>Print</a></li>
					<li><a class="copy"><i class="las la-copy pr-2"></i>Copy</a></li>
				</ul>
			</div>
			<a href="{{ common.info.url_route }}role/add" class="btn btn-primary btn-sm"><i class="las la-plus pr-2"></i> New User Role</a>
		</div>
	</div>
</div>
<div class="panel panel-default">
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-bordered table-striped datatable-table" width="100%">
				<thead>
					<tr class="table-heading">
						<th>#</th>
						<th>Role Name</th>
						<th>Description</th>
						<th>Created Date</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for value in result %}
						<tr>
							<td>{{ loop.index }}</td>
							<td class="text-primary">{{ value.name }}</td>
							<td>{{ value.description }}</td>
							<td>{{ value.date_of_joining|date(common.info.date_format) }}</td>
							<td class="table-action">
								{% if value.id > '1' %}
									<a href="{{ common.info.url_route~'role/edit&id='~value.id }}" class="text-primary edit" data-toggle="tooltip" title="Edit"><i class="las la-edit"></i></a>
									<a class="table-delete text-danger delete" data-toggle="tooltip" title="Delete">
										<i class="las la-trash-alt"></i><input type="hidden" value="{{ value.id }}">
									</a>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{{ include('common/delete_modal.twig') }}
{{ include('common/footer.twig') }}